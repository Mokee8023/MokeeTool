<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Save_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:background">@drawable/save_activity_style_shap</item>
        <!-- dialog背景样式 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
    </style>

    <style name="Phone_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:background">@drawable/save_activity_style_shap</item>
        <!-- dialog背景样式 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
    </style>

    <style name="QueryIdCard_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:background">@drawable/query_idcard_activity_style_shap</item>
        <!-- dialog背景样式 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
    </style>

    <style name="circle_progress_loading_dialog" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
    </style>

</resources>